<!doctype html>
<html lang="en">

<head>
    <title>Meadowlark Travel</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Meadowlark CSS -->
    <link rel="stylesheet" type="text/css" href="/css/meadowlark.css">

</head>

<body>
    <div class="container bg-light">
        <!--  Menu -->

        <nav class="navbar navbar-expand-lg bg-light navbar-light">
            <div class="container-fluid">
                <!-- brand icon -->
                <a class="navbar-brand" href="#">
                    <img src="/img/logo.png" alt="Avatar Logo" style="width:40px;" class="rounded-pill">
                </a>
                <!-- menu toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menu Items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="row border p-3">
            <div class="col-9">

                <!-- Container for Flash Alerts -->
                <div id="alertContainer">
                    {{#each flash}}
                    <div class="alert alert-{{this.type}} alert-dismissible fade show" role="alert">
                        <strong>{{this.intro}}</strong>
                        {{this.message}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {{/each}}
                </div>

                {{{body}}}
            </div>
            <div class="col d-none d-sm-block">
                <img src="/img/logo.png" class="img-thumbnail float-end" alt="" srcset="">
            </div>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>