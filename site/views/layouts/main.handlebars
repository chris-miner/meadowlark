<!doctype html>
<html lang="en">

<head>
    <title>Meadowlark Travel</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Meadowlark CSS -->
    <link rel="stylesheet" type="text/css" href="/css/meadowlark.css">

</head>

<body>
    <div class="container bg-light">
        <!--  Main Menu -->
        <div class="row border">
            <nav class="navbar navbar-expand-sm bg-light navbar-light">
                <div class="container">
                    <!-- Menu Items -->
                    <ul class="navbar-nav">
                        <a class="navbar-brand" href="#">
                            <img src="/img/logo.png" alt="Avatar Logo" style="width:40px;" class="rounded-pill">
                        </a>
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <!-- Main Content -->
        <div class="row border p-3">
            <div class="col-9">

                <!-- Container for Flash Alerts -->
                <div id="alertContainer">
                    {{#each flash}}
                    <div class="alert alert-{{this.type}} alert-dismissible fade show" role="alert">
                        <strong>{{this.intro}}</strong>
                        {{this.message}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {{/each}}
                </div>

                {{{body}}}
            </div>
            <div class="col-3">
                <img src="/img/logo.png" class="img-thumbnail float-end" alt="" srcset="">
            </div>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>